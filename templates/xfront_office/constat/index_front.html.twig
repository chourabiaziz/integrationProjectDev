{% extends 'base_front.html.twig' %}

{% block title %}Constat {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .text-shadow {
            text-shadow: 4px 4px 6px rgba(0, 0, 0, 0.8);
        }
        .custom-card {
            background-color: #DCDCDC;
            border: 2px solid #A9A9A9;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5 text-center">
        <h1 class="display-4 font-weight-bold text-primary">
            <span class="text-shadow">Constats liste</span>
        </h1>
    </div>

    <form method="GET" action="{{ path('app_constat_index') }}" class="mb-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Rechercher par nom d'assurance" name="search">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Rechercher</button>
            </div>
        </div>
    </form> 

    <div class="container">
        <div class="card-deck">

            {% for constat in constats %}
                <div class="card custom-card mb-3">
                    <div class="card-header">{{ constat.APreneurPrenom }}</div>
                    <div class="card-body">
                      
                        <p class="card-text">
                            <strong>Localisation:</strong>
                            {{ constat.localisation }}</p>
                        <p class="card-text">
                            <strong>Nom:</strong>
                            {{ constat.ASocieteAssuranceNom }}</p>
                        <a href="{{ path('app_constat_show', {'id': constat.id}) }}" class="btn btn-primary btn-sm mr-2">
                            <i class="fas fa-eye"></i> Show
                        </a>
                        <a href="{{ path('app_constat_edit', {'id': constat.id}) }}" class="btn btn-primary btn-sm mr-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>
                </div>  
            {% else %}
                <p class="text-center">No records found</p>
            {% endfor %}
        </div> 
    </div>

    <a href="{{ path('app_constat_new') }}" class="btn btn-success mt-4">
        <i class="fas fa-plus"></i> Create new
    </a>
{% endblock %}
