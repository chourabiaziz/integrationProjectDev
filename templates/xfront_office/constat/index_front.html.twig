{% extends 'base_front.html.twig' %}

{% block title %}Constat {% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<style>
    .text-shadow {
        text-shadow: 4px 4px 6px rgba(0, 0, 0, 0.8);
    }

    .custom-card {
        background-color: #DCDCDC;
        border: 2px solid #A9A9A9;
    }
</style>
{% endblock %}

{% block body %}

<div class="container mt-5 text-center">
    <h1 class="display-4 font-weight-bold text-primary">
        <span class="text-shadow"> liste des Constats</span>
    </h1>
</div>



<div class="container">
    <form method="GET" action="{{ path('app_constat_index') }}">
        <div class="input-group mb-3 ml-5 col-6">
            <input type="text" class="form-control" placeholder="Rechercher  preneur prenom" name="search">
            <button class="btn btn-outline-secondary ml-3" type="submit"> <svg xmlns="http://www.w3.org/2000/svg"
                    width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path
                        d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                </svg></button>
        </div>


    </form>
    <div class="card-columns">

        {% for constat in constats %}
        <div class="card custom-card mb-3">
            <div class="card-header">{{ constat.APreneurPrenom }}</div>
            <div class="card-body">

                <p class="card-text">{{ constat.localisation }}</p>
                <p class="card-text">{{ constat.ASocieteAssuranceNom }}</p>
                <p class="card-text">{{ constat.imageFilename }}</p>



                <a href="{{ path('app\_constat\_show', {'id': constat.id}) }}" class="btn btn-primary btn-sm m-2"><svg
                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye"
                        viewBox="0 0 16 16">
                        <path
                            d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z" />
                        <path
                            d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" />
                    </svg></a>
                <a href="{{ path('app_constat_edit', {'id': constat.id}) }}" class="btn btn-secondary btn-sm m-2"><svg
                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-pencil" viewBox="0 0 16 16">
                        <path
                            d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                    </svg></a>
                <a href="{{ path('app_assurance_index', {'id': constat.id}) }}" class="btn btn-secondary btn-sm m-2">
                    Assurance</a>

            </div>

        </div>
        {% else %}
        <p>No records found</p>
        {% endfor %}
    </div>
</div>

<a href="{{ path('app_constat_new') }}" class="btn btn-success">Create new</a>
{% endblock %}