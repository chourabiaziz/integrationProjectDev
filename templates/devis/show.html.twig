{% extends 'base.html.twig' %}

{% block title %}Devis
{% endblock %}

{% block body %}
<h1>Devis</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ devi.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ devi.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ devi.prenom }}</td>
        </tr>
        <tr>
            <th>Civilite</th>
            <td>{{ devi.civilite }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ devi.telephone }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ devi.email }}</td>
        </tr>
        <tr>
            <th>Voiture</th>
            <td>{{ devi.voiture }}</td>
        </tr>
        <tr>
            <th>Matricule</th>
            <td>{{ devi.matricule }}</td>
        </tr>
        <tr>
            <th>Puissance</th>
            <td>{{ devi.puissance }}</td>
        </tr>
        <tr>
            <th>Cylindre</th>
            <td>{{ devi.cylindre }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ devi.description }}</td>
        </tr>
        <tr>
            <th>Etat</th>
            {% if devi.statut %}
            <td>demande accepté</td>

            {% elseif not devi.statut %}
            <td>demande refusé</td>
            {% else %}
            <td>demande en attente</td>

            {% endif %}


            <td>{{ devi.statut }}</td>
        </tr>
    </tbody>
</table>
<div class="row">
    <div class="col-2">
        <a class="btn btn-success" href="/devis/{{devi.id}}/accepte">Accepter</a>

    </div>
    <div class="col-2">
        <a class="btn btn-danger" href="/devis/{{devi.id}}/refuse">Refuser</a>
    </div>
    <div class="col-2">
        {{ include('devis/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}