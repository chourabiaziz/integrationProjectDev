{% extends 'base.html.twig' %}

{% block title %}Renouvellement Contrat
{% endblock %}

{% block body %}
<h1>Renouvellement</h1>

{{ form_start(form) }}

<div class="container">

	<div class="card p-5">
		<div class="form-group row  ">
			<label class="col-sm-2 col-form-label">{{ form_label(form.couverture) }}
			</label>
			<div class="col-sm-10">
				{{ form_widget(form.couverture, { 'attr': {'class': 'form-control form-control-capitalize' } }) }}
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label">{{ form_label(form.prix) }}
				<b>TND</b>
			</label>
			<div class="col-sm-10 ">
				{{ form_widget(form.prix, { 'attr': {'class': 'form-control form-control-capitalize' } }) }}
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label">{{ form_label(form.dateDebut) }}
			</label>
			<div class="col-sm-10">
				{{ form_widget(form.dateDebut, { 'attr': {'class': 'form-control form-control-capitalize'} }) }}
			</div>
		</div>


		<div class="form-group row">
			<label class="col-sm-2 col-form-label">{{ form_label(form.engagement) }}
			</label>
			<div class="col-sm-10">
				{{ form_widget(form.engagement, { 'attr': {'class': 'form-control form-control-capitalize' } }) }}
			</div>
		</div>
		<h5>Description par le client :
			{{contrat.description}}</h5>

		<div class="text-center"> <button class="btn btn-primary">{{ button_label|default('affecter') }}</button>
		</div>
		<br>
		<br>
		{{ form_end(form) }}


		{{ include('contrat/_delete_form.html.twig') }}
	</div>
</div>

{% endblock %}