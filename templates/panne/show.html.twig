{% extends 'base.html.twig' %}

{% block title %}Détails de la Panne{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Détails de la Panne</h1>

    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ panne.id }}</td>
                </tr>
                <tr>
                    <th>Localisation</th>
                    <td>{{ panne.localisation }}</td>
                </tr>
                <tr>
                    <th>Panne</th>
                    <td>{{ panne.panne }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ panne.description }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ panne.date ? panne.date|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center">
        <a href="{{ path('app_panne_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_panne_edit', {'id': panne.id}) }}" class="btn btn-primary">Modifier</a>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Supprimer</button>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer cette panne ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <form action="{{ path('app_panne_delete', {'id': panne.id}) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
