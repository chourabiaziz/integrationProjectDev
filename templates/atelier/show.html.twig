{% extends 'base.html.twig' %}

{% block title %}Atelier{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Détails de l'Atelier</h1>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ atelier.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nom</th>
                            <td>{{ atelier.nom }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Adresse</th>
                            <td>{{ atelier.adresse }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Numéro de Téléphone</th>
                            <td>{{ atelier.numeroTelephone }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Spécialité</th>
                            <td>{{ atelier.specialite }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Heure d'Ouverture</th>
                            <td>{{ atelier.heureOverture ? atelier.heureOverture|date('H:i') : 'Non spécifié' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Heure de Fermeture</th>
                            <td>{{ atelier.heureFermeture ? atelier.heureFermeture|date('H:i') : 'Non spécifié' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Avis</th>
                            <td>{{ atelier.avis }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-center">
            <a href="{{ path('app_atelier_index') }}" class="btn btn-secondary mr-3">Retour à la liste</a>
            <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}" class="btn btn-primary mr-3">Modifier</a>
            <form action="{{ path('app_atelier_delete', {'id': atelier.id}) }}" method="post" class="d-inline">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ atelier.id) }}">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet atelier ?')">Supprimer</button>
            </form>
        </div>
    </div>
{% endblock %}
