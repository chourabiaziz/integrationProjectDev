{% extends 'base.html.twig' %}

{% block title %}Constat
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
	<style>
		.text-shadow {
			text-shadow: 4px 4px 6px rgba(0, 0, 0, 0.8);
		}

		.custom-card {
			background-color: #DCDCDC;
			border: 2px solid #A9A9A9;
		}
	</style>
{% endblock %}

{% block body %}

	<div class="container mt-5 text-center">
		<h1 class="display-4 font-weight-bold text-primary">
			<span class="text-shadow">
				liste des Constats</span>
		</h1>
	</div>

	<form method="GET" action="{{ path('app_constat_index') }}">
		<div class="input-group mb-3">
			<input type="text" class="form-control" placeholder="Rechercher pA preneur prenom" name="search">
			<button class="btn btn-outline-secondary" type="submit">Rechercher</button>
		</div>
	</form>

	<div class="container">
		<div class="card-columns">

			{% for constat in constats %}
				<div class="card custom-card mb-3">
					<div class="card-header">{{ constat.APreneurPrenom }}</div>
					<div class="card-body">

						<p class="card-text">{{ constat.localisation }}</p>
						<p class="card-text">{{ constat.ASocieteAssuranceNom }}</p>


						<a href="{{ path('app\_constat\_show', {'id': constat.id}) }}" class="btn btn-primary btn-sm mr-2">Show</a>
						<a href="{{ path('app_constat_edit', {'id': constat.id}) }}" class="btn btn-primary btn-sm mr-2">Edit</a>
						<a href="{{ path('app_assurance_index', {'id': constat.id}) }}" class="btn btn-primary btn-sm mr-2">Consulter Assurance</a>

					</div>

				</div>
			{% else %}
				<p>No records found</p>
			{% endfor %}
		</div>
	</div>
	<div class="">
		<a href="{{ path('app_constat_new') }}" class="btn btn-success">Create new</a>
	</div>
{% endblock %}
